{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure (CMake)",
      "type": "shell",
      "command": "cmake -S . -B build -G Ninja -DCMAKE_C_COMPILER=clang"
    },
    {
      "label": "Build (Ninja)",
      "type": "shell",
      "command": "cmake --build build -- -v",
      "dependsOn": "Configure (CMake)"
    },
    {
      "label": "CTest",
      "type": "shell",
      "command": "ctest --test-dir build --output-on-failure",
      "dependsOn": "Build (Ninja)"
    }
  ]
}
